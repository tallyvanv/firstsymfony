{% extends 'base.html.twig' %}

{% block title %}Show my name{% endblock %}

{% block body %}
    <h1>Hello {{ name }}!</h1>
    <form method="post" action="{{ path('change_my_name') }}">
        <label for="name">Name:</label><br>
        <input type="text" name="name"><br><br>
        <input type="submit" value="Submit">
    </form>
{% endblock %}